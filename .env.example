# Токен вашого Telegram бота (отримайте у @BotFather)
BOT_TOKEN=your_bot_token_here

# Comma-separated list of super-admin Telegram IDs
ADMIN_IDS=123456789

# SQLite database URL (relative to project root)
DATABASE_URL=sqlite+aiosqlite:///data/bot.db

# Auto-close tickets that have no activity for N minutes (default 1440 = 24h)
TICKET_AUTO_CLOSE_MINUTES=1440

# How often to check for stale tickets (seconds)
TICKET_CHECK_INTERVAL_SECONDS=60
